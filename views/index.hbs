    <script>

        function slide() {
            const slideNodes = document.querySelectorAll('.slide:not(.slide--in)');
            let delay = 250;
            for (let i = 0; i < slideNodes.length; i++) {
                const node = slideNodes[i];
                if (onScreen(node)) {
                    setTimeout(() => {
                        node.classList.add('slide--in');
                    }, delay);
                    delay += 250;
                }
            }
        }

        function onScreen(element) {
            const curTop = element.offsetTop;
            const screenHeight = window.innerHeight;
            return curTop <= screenHeight + window.scrollY && window.scrollY <= curTop;
        }

        window.onscroll = () => slide();
        slide();

    </script>
